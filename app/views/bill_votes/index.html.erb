<p id="notice"><%= notice %></p>

<h1>Bill Votes</h1>

<table>
  <thead>
    <tr>
      <th>Bill</th>
      <th>User</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_votes.each do |bill_vote| %>
      <tr>
        <td><%= bill_vote.bill_id %></td>
        <td><%= bill_vote.user_id %></td>
        <td><%= bill_vote.amount %></td>
        <td><%= link_to 'Show', bill_vote %></td>
        <td><%= link_to 'Edit', edit_bill_vote_path(bill_vote) %></td>
        <td><%= link_to 'Destroy', bill_vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bill Vote', new_bill_vote_path %>
